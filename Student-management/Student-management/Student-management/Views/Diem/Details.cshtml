@model Student_management.Models.Diem

@{
    ViewData["Title"] = "Chi tiết điểm";
}

<h2>Chi tiết điểm</h2>

<div class="card p-3 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">Học sinh</dt>
        <dd class="col-sm-9">@Model.MaHsNavigation.HoTen</dd>

        <dt class="col-sm-3">Môn học</dt>
        <dd class="col-sm-9">@Model.MaMonHocNavigation.TenMonHoc</dd>

        <dt class="col-sm-3">Học kỳ</dt>
        <dd class="col-sm-9">@Model.MaHkNavigation.TenHk</dd>

        <dt class="col-sm-3">Điểm miệng</dt>
        <dd class="col-sm-9">@Model.DiemMieng</dd>

        <dt class="col-sm-3">Điểm 15 phút</dt>
        <dd class="col-sm-9">@Model.Diem15p</dd>

        <dt class="col-sm-3">Điểm 1 tiết</dt>
        <dd class="col-sm-9">@Model.Diem1Tiet</dd>

        <dt class="col-sm-3">Điểm thi</dt>
        <dd class="col-sm-9">@Model.DiemThi</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.MaDiem" class="btn btn-primary">Chỉnh sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>
