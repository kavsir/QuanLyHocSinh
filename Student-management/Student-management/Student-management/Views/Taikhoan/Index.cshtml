@model IEnumerable<Student_management.Models.Taikhoan>

@{
    ViewData["Title"] = "Quản lý tài khoản";
}

<h2 class="mb-3">Danh sách tài khoản</h2>

<p>
    <a asp-action="Create" class="btn btn-success">+ Tạo tài khoản</a>
</p>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Tên đăng nhập</th>
            <th>Vai trò</th>
            <th>Học sinh</th>
            <th>Giáo viên</th>
            <th style="width: 150px;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenDangNhap</td>
                <td>@item.VaiTro</td>
                <td>@item.MaHsNavigation?.HoTen</td>
                <td>@item.MaGvNavigation?.HoTen</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaTk" class="btn btn-sm btn-outline-secondary">Xem</a>
                    <a asp-action="Edit" asp-route-id="@item.MaTk" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaTk" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
