@model Student_management.Models.Taikhoan

@{
    ViewData["Title"] = "Chỉnh sửa tài khoản";
}

<h2 class="mb-3">Chỉnh sửa tài khoản</h2>

<form asp-action="Edit" method="post" class="row g-3">
    <input type="hidden" asp-for="MaTk" />

    <div class="col-md-6">
        <label asp-for="TenDangNhap" class="form-label"></label>
        <input asp-for="TenDangNhap" class="form-control" />
        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="MatKhau" class="form-label"></label>
        <input asp-for="MatKhau" type="password" class="form-control" />
        <span asp-validation-for="MatKhau" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="VaiTro" class="form-label"></label>
        <select asp-for="VaiTro" class="form-select">
            <option value="Admin">Admin</option>
            <option value="Giáo viên">Giáo viên</option>
            <option value="Học sinh">Học sinh</option>
        </select>
    </div>
    <div class="col-md-6">
        <label asp-for="MaHs" class="form-label">Học sinh</label>
        <select asp-for="MaHs" class="form-select" asp-items="ViewBag.MaHs">
            <option value="">-- Chọn học sinh --</option>
        </select>
    </div>
    <div class="col-md-6">
        <label asp-for="MaGv" class="form-label">Giáo viên</label>
        <select asp-for="MaGv" class="form-select" asp-items="ViewBag.MaGv">
            <option value="">-- Chọn giáo viên --</option>
        </select>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-warning">Cập nhật</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>
