@model Student_management.Models.Taikhoan

@{
    ViewData["Title"] = "Xóa tài khoản";
}

<h2 class="mb-3 text-danger">Xóa tài khoản</h2>

<div class="alert alert-warning">
    Bạn có chắc chắn muốn xóa tài khoản <strong>@Model.TenDangNhap</strong> không?
</div>

<dl class="row">
    <dt class="col-sm-3">Tên đăng nhập</dt>
    <dd class="col-sm-9">@Model.TenDangNhap</dd>

    <dt class="col-sm-3">Vai trò</dt>
    <dd class="col-sm-9">@Model.VaiTro</dd>

    <dt class="col-sm-3">Học sinh</dt>
    <dd class="col-sm-9">@Model.MaHsNavigation?.HoTen</dd>

    <dt class="col-sm-3">Giáo viên</dt>
    <dd class="col-sm-9">@Model.MaGvNavigation?.HoTen</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MaTk" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
