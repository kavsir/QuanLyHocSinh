@model IEnumerable<Student_management.Models.PhancongGiangday>

@{
    ViewData["Title"] = "Danh sách phân công giảng dạy";
}

<h1 class="mb-3">Danh sách phân công giảng dạy</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">+ Thêm phân công</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Giáo viên</th>
            <th>Môn học</th>
            <th>Lớp</th>
            <th>Học kỳ</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaGvNavigation?.HoTen</td>
                <td>@item.MaMonHocNavigation?.TenMonHoc</td>
                <td>@item.MaLopNavigation?.TenLop</td>
                <td>@item.MaHkNavigation?.TenHk</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.MaPc">Chi tiết</a> |
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.MaPc">Sửa</a> |
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.MaPc">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
