@model Student_management.Models.Lichhoc

@{
    ViewData["Title"] = "Chỉnh sửa lịch học";
}

<h1>Chỉnh sửa lịch học</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="MaLichHoc" />

    <div class="mb-3">
        <label class="form-label">Lớp</label>
        <select asp-for="MaLop" class="form-select" asp-items="ViewBag.MaLop"></select>
    </div>
    <div class="mb-3">
        <label class="form-label">Môn học</label>
        <select asp-for="MaMonHoc" class="form-select" asp-items="ViewBag.MaMonHoc"></select>
    </div>
    <div class="mb-3">
        <label class="form-label">Giáo viên</label>
        <select asp-for="MaGv" class="form-select" asp-items="ViewBag.MaGv"></select>
    </div>
    <div class="mb-3">
        <label class="form-label">Phòng học</label>
        <select asp-for="MaPhong" class="form-select" asp-items="ViewBag.MaPhong"></select>
    </div>
    <div class="mb-3">
        <label class="form-label">Học kỳ</label>
        <select asp-for="MaHk" class="form-select" asp-items="ViewBag.MaHk"></select>
    </div>
    <div class="mb-3">
        <label class="form-label">Thứ trong tuần</label>
        <input asp-for="ThuTrongTuan" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Tiết học</label>
        <input asp-for="TietHoc" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Lưu thay đổi</button> |
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
