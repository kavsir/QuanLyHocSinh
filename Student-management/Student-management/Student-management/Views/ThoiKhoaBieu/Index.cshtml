@model Dictionary<string, Dictionary<int, Student_management.Models.Lichhoc>>
@{
    ViewData["Title"] = "Thời khóa biểu";
    var thuTrongTuan = new[] { "Thứ 2", "Thứ 3", "Thứ 4", "Thứ 5", "Thứ 6", "Thứ 7" };
    int maxTiet = ViewBag.MaxTiet ?? 6;
}

<h2 class="mb-4">📅 Thời khóa biểu của tôi</h2>

<table class="table table-bordered text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>Tiết</th>
            @foreach (var thu in thuTrongTuan)
            {
                <th>@thu</th>
            }
        </tr>
    </thead>
    <tbody>
        @for (int tiet = 1; tiet <= maxTiet; tiet++)
        {
            <tr>
                <td class="fw-bold">Tiết @tiet</td>
                @foreach (var thu in thuTrongTuan)
                {
                    if (Model.ContainsKey(thu) && Model[thu].ContainsKey(tiet))
                    {
                        var mon = Model[thu][tiet];
                        <td>
                            <div><b>@mon.MaMonHocNavigation?.TenMonHoc</b></div>
                            <div>@mon.MaGvNavigation?.HoTen</div>
                            <div>Phòng: @mon.MaPhongNavigation?.TenPhong</div>
                        </td>
                    }
                    else
                    {
                        <td>-</td>
                    }
                }
            </tr>
        }
    </tbody>
</table>
