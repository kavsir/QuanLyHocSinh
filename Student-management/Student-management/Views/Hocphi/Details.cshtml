@model Student_management.Models.Hocphi

@{
    ViewData["Title"] = "Chi tiết Học phí";
}

<h2>Chi tiết Học phí</h2>

<div class="card p-3 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">Học sinh</dt>
        <dd class="col-sm-9">@Model.MaHsNavigation.HoTen</dd>

        <dt class="col-sm-3">Học kỳ</dt>
        <dd class="col-sm-9">@Model.MaHkNavigation.TenHk</dd>

        <dt class="col-sm-3">Số tiền</dt>
        <dd class="col-sm-9">@String.Format("{0:N0} VNĐ", Model.SoTien)</dd>

        <dt class="col-sm-3">Ngày đóng</dt>
        <dd class="col-sm-9">@Model.NgayDong.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Trạng thái</dt>
        <dd class="col-sm-9">
            @if (Model.TrangThai == "Đã đóng")
            {
                <span class="badge bg-success">Đã đóng</span>
            }
            else
            {
                <span class="badge bg-warning text-dark">Chưa đóng</span>
            }
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.MaHp" class="btn btn-warning">✏ Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">↩ Quay lại</a>
</div>
