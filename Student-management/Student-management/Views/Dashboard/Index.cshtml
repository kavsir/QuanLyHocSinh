@{
    ViewData["Title"] = "Bảng điều khiển";
}

<h1 class="mb-4">📊 Bảng điều khiển</h1>

<div class="row">
    <div class="col-md-3 mb-3">
        <div class="card bg-primary text-white shadow">
            <div class="card-body">
                <h4>@ViewData["TotalStudents"]</h4>
                <p>Học sinh</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-success text-white shadow">
            <div class="card-body">
                <h4>@ViewData["TotalTeachers"]</h4>
                <p>Giáo viên</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-warning text-dark shadow">
            <div class="card-body">
                <h4>@ViewData["TotalClasses"]</h4>
                <p>Lớp học</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-info text-white shadow">
            <div class="card-body">
                <h4>@ViewData["TotalSubjects"]</h4>
                <p>Môn học</p>
            </div>
        </div>
    </div>
</div>

<h3 class="mt-4">💰 Thống kê học phí</h3>
<div class="row">
    <div class="col-md-4 mb-3">
        <div class="card border-success shadow">
            <div class="card-body">
                <h5>Tổng số tiền đã thu</h5>
                <p class="text-success fw-bold">@String.Format("{0:N0} VNĐ", ViewData["TotalHocPhi"])</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card border-primary shadow">
            <div class="card-body">
                <h5>Số học sinh đã đóng</h5>
                <p class="text-primary fw-bold">@ViewData["DaDong"]</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card border-danger shadow">
            <div class="card-body">
                <h5>Số học sinh chưa đóng</h5>
                <p class="text-danger fw-bold">@ViewData["ChuaDong"]</p>
            </div>
        </div>
    </div>
</div>
