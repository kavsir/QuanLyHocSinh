@model Student_management.Models.Diem

@{
    ViewData["Title"] = "Thêm điểm";
}

<h2>Thêm điểm mới</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="MaHs" class="form-label">Học sinh</label>
        <select asp-for="MaHs" class="form-control" asp-items="ViewBag.MaHs"></select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="MaMonHoc" class="form-label">Môn học</label>
        <select asp-for="MaMonHoc" class="form-control" asp-items="ViewBag.MaMonHoc"></select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="MaHk" class="form-label">Học kỳ</label>
        <select asp-for="MaHk" class="form-control" asp-items="ViewBag.MaHk"></select>
    </div>

    <div class="row">
        <div class="col-md-3">
            <label asp-for="DiemMieng" class="form-label"></label>
            <input asp-for="DiemMieng" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="Diem15p" class="form-label"></label>
            <input asp-for="Diem15p" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="Diem1Tiet" class="form-label"></label>
            <input asp-for="Diem1Tiet" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="DiemThi" class="form-label"></label>
            <input asp-for="DiemThi" class="form-control" />
        </div>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Lưu" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>
