@model IEnumerable<Student_management.Models.Namhoc>

@{
    ViewData["Title"] = "Quản lý Năm học";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus-circle me-2"></i>Tạo Năm học mới</a>
</p>
<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TenNamHoc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NgayBatDau)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NgayKetThuc)
                    </th>
                    <th style="width: 15%;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenNamHoc)
                        </td>
                        <td>
                            @item.NgayBatDau.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @item.NgayKetThuc.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.MaNamHoc" class="btn btn-sm btn-warning" title="Sửa"><i class="fas fa-edit"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>