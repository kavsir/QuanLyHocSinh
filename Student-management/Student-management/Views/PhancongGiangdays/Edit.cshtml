@model Student_management.Models.PhancongGiangday

@{
    ViewData["Title"] = "Chỉnh sửa Phân công Giảng dạy";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="MaPc" />

                    <div class="mb-3">
                        <label asp-for="MaHk" class="form-label"></label>
                        <select asp-for="MaHk" class="form-select" asp-items="ViewBag.MaHk"></select>
                        <span asp-validation-for="MaHk" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="MaLop" class="form-label"></label>
                        <select asp-for="MaLop" class="form-select" asp-items="ViewBag.MaLop"></select>
                        <span asp-validation-for="MaLop" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="MaMonHoc" class="form-label"></label>
                        <select asp-for="MaMonHoc" class="form-select" asp-items="ViewBag.MaMonHoc"></select>
                        <span asp-validation-for="MaMonHoc" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="MaGv" class="form-label"></label>
                        <select asp-for="MaGv" class="form-select" asp-items="ViewBag.MaGv"></select>
                        <span asp-validation-for="MaGv" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Lưu thay đổi</button>
                        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}