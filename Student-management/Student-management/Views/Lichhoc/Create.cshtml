@model Student_management.Models.Lichhoc

<h1>Thêm lịch học mới</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Lớp</label>
        <select asp-for="MaLop" class="form-select" asp-items="ViewBag.MaLop">
            <option value="">-- Chọn lớp --</option>
        </select>
        <span asp-validation-for="MaLop" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Môn học</label>
        <select asp-for="MaMonHoc" class="form-select" asp-items="ViewBag.MaMonHoc">
            <option value="">-- Chọn môn học --</option>
        </select>
        <span asp-validation-for="MaMonHoc" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Giáo viên</label>
        <select asp-for="MaGv" class="form-select" asp-items="ViewBag.MaGv">
            <option value="">-- Chọn giáo viên --</option>
        </select>
        <span asp-validation-for="MaGv" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Phòng học</label>
        <select asp-for="MaPhong" class="form-select" asp-items="ViewBag.MaPhong">
            <option value="">-- Chọn phòng --</option>
        </select>
        <span asp-validation-for="MaPhong" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Học kỳ</label>
        <select asp-for="MaHk" class="form-select" asp-items="ViewBag.MaHk">
            <option value="">-- Chọn học kỳ --</option>
        </select>
        <span asp-validation-for="MaHk" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Thứ trong tuần</label>
        <input asp-for="ThuTrongTuan" class="form-control" />
        <span asp-validation-for="ThuTrongTuan" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Tiết học</label>
        <input asp-for="TietHoc" class="form-control" type="number" min="1" max="10" />
        <span asp-validation-for="TietHoc" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button> |
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
