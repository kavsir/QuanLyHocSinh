@model Student_management.Models.Lichhoc

@{
    ViewData["Title"] = "Chi tiết lịch học";
}

<h1>Chi tiết lịch học</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Lớp</dt>
        <dd class="col-sm-10">@Model.MaLopNavigation.TenLop</dd>

        <dt class="col-sm-2">Môn học</dt>
        <dd class="col-sm-10">@Model.MaMonHocNavigation.TenMonHoc</dd>

        <dt class="col-sm-2">Giáo viên</dt>
        <dd class="col-sm-10">@Model.MaGvNavigation.HoTen</dd>

        <dt class="col-sm-2">Phòng học</dt>
        <dd class="col-sm-10">@Model.MaPhongNavigation.TenPhong</dd>

        <dt class="col-sm-2">Học kỳ</dt>
        <dd class="col-sm-10">@Model.MaHkNavigation.TenHk</dd>

        <dt class="col-sm-2">Thứ</dt>
        <dd class="col-sm-10">@Model.ThuTrongTuan</dd>

        <dt class="col-sm-2">Tiết học</dt>
        <dd class="col-sm-10">@Model.TietHoc</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.MaLichHoc" class="btn btn-warning">Sửa</a> |
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>
