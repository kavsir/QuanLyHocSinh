@model IEnumerable<Student_management.Models.Hocsinh>

@{
    ViewData["Title"] = "Quản lý Học sinh";
}

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-user-graduate me-2"></i>@ViewData["Title"]</h5>
            <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fas fa-plus-circle me-2"></i>Thêm Học sinh mới</a>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get" class="mb-4">
            <div class="row g-2">
                <div class="col-md-6">
                    <input type="text" name="searchString" class="form-control" placeholder="Nhập tên học sinh để tìm..." value="@ViewData["CurrentSearch"]" />
                </div>
                <div class="col-md-4">
                    <select name="classFilter" class="form-select" asp-items="@(ViewBag.ClassList as SelectList)">
                        <option value="">-- Lọc theo Lớp --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-filter me-2"></i>Lọc</button>
                    </div>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.HoTen)</th>
                        <th>@Html.DisplayNameFor(model => model.NgaySinh)</th>
                        <th>@Html.DisplayNameFor(model => model.GioiTinh)</th>
                        <th>Lớp</th>
                        <th>Trạng thái</th>
                        <th class="text-center" style="width: 15%;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                            <td>@item.NgaySinh?.ToString("dd/MM/yyyy")</td>
                            <td>@Html.DisplayFor(modelItem => item.GioiTinh)</td>
                            <td>@Html.DisplayFor(modelItem => item.MaLopNavigation.TenLop)</td>
                            <td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.MaHs" class="btn btn-sm btn-warning" title="Sửa"><i class="fas fa-edit"></i></a>
                                <a asp-action="Details" asp-route-id="@item.MaHs" class="btn btn-sm btn-info" title="Chi tiết"><i class="fas fa-info-circle"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.MaHs" class="btn btn-sm btn-danger" title="Xóa"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>