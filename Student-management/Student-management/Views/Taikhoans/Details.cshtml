@model Student_management.Models.Taikhoan

@{
    ViewData["Title"] = "Chi tiết Tài khoản";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h4>@ViewData["Title"]: @Model.TenDangNhap</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TenDangNhap)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.TenDangNhap)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.VaiTro)</dt>
                    <dd class="col-sm-8">
                        @if (Model.VaiTro == "Admin")
                        {
                            <span class="badge bg-danger">@Model.VaiTro</span>
                        }
                        else if (Model.VaiTro == "GiaoVien")
                        {
                            <span class="badge bg-primary">@Model.VaiTro</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@Model.VaiTro</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Người dùng liên kết</dt>
                    <dd class="col-sm-8">
                        @if (Model.MaHsNavigation != null)
                        {
                            <a asp-controller="Hocsinhs" asp-action="Details" asp-route-id="@Model.MaHs">
                                @Model.MaHsNavigation.HoTen
                            </a>
                        }
                        else if (Model.MaGvNavigation != null)
                        {
                            <a asp-controller="Giaoviens" asp-action="Details" asp-route-id="@Model.MaGv">
                                @Model.MaGvNavigation.HoTen
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">Tài khoản Quản trị hệ thống</span>
                        }
                    </dd>
                </dl>
            </div>
            <div class="card-footer text-end">
                <a asp-action="Edit" asp-route-id="@Model.MaTk" class="btn btn-warning"><i class="fas fa-key me-2"></i>Đặt lại Mật khẩu</a>
                <a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách</a>
            </div>
        </div>
    </div>
</div>