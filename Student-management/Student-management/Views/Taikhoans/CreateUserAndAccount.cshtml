@model Student_management.Models.CreateUserAndAccountViewModel

@{
    ViewData["Title"] = "Tạo Người dùng & Tài khoản";
}

<h1>@ViewData["Title"]</h1>
<p>Điền thông tin để tạo một người dùng mới (học sinh hoặc giáo viên) và tài khoản đăng nhập tương ứng.</p>
<hr />

<form asp-action="CreateUserAndAccount" method="post">

    @* <<< SỬA 1: THAY ĐỔI "ModelOnly" THÀNH "All" ĐỂ HIỂN THỊ TẤT CẢ LỖI >>> *@
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="row">
        <div class="col-md-7">
            <div class="card shadow-sm">
                <div class="card-header"><h4><i class="fas fa-user-edit me-2"></i>Thông tin cá nhân</h4></div>
                <div class="card-body">

                    <div class="mb-3">
                        <label asp-for="VaiTro" class="form-label"></label>
                        <select asp-for="VaiTro" class="form-select">
                            <option value="">-- Chọn vai trò --</option>
                            <option value="HocSinh">Học sinh</option>
                            <option value="GiaoVien">Giáo viên</option>
                        </select>
                        <span asp-validation-for="VaiTro" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HoTen" class="form-label"></label>
                        <input asp-for="HoTen" class="form-control" />
                        <span asp-validation-for="HoTen" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="NgaySinh" class="form-label"></label>
                            <input asp-for="NgaySinh" type="date" class="form-control" />
                            <span asp-validation-for="NgaySinh" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="GioiTinh" class="form-label"></label>
                            <select asp-for="GioiTinh" class="form-select">
                                @* <<< SỬA 2: THÊM LỰA CHỌN MẶC ĐỊNH ĐỂ [Required] HOẠT ĐỘNG ĐÚNG >>> *@
                                <option value="">-- Chọn giới tính --</option>
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                            </select>
                            <span asp-validation-for="GioiTinh" class="text-danger"></span>
                        </div>
                    </div>

                    @* <<< SỬA 3: THÊM TRƯỜNG "ĐỊA CHỈ" BỊ THIẾU >>> *@
                    <div class="mb-3">
                        <label asp-for="DiaChi" class="form-label"></label>
                        <input asp-for="DiaChi" class="form-control" />
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" type="email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Sdt" class="form-label"></label>
                        <input asp-for="Sdt" type="tel" class="form-control" />
                        <span asp-validation-for="Sdt" class="text-danger"></span>
                    </div>

                    <div id="monHocDiv" class="mb-3" style="display:none;">
                        <label asp-for="MaMonHoc" class="form-label"></label>
                        <select asp-for="MaMonHoc" class="form-select" asp-items="@(ViewBag.MonHocList as SelectList)">
                            <option value="">-- Chọn môn chuyên môn --</option>
                        </select>
                        <span asp-validation-for="MaMonHoc" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-header"><h4><i class="fas fa-key me-2"></i>Thông tin đăng nhập</h4></div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="TenDangNhap" class="form-label"></label>
                        <input asp-for="TenDangNhap" class="form-control" />
                        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="MatKhau" class="form-label"></label>
                        <input asp-for="MatKhau" type="password" class="form-control" />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Tạo người dùng</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            function toggleMonHocDiv() {
                if ($('#VaiTro').val() === 'GiaoVien') {
                    $('#monHocDiv').show();
                } else {
                    $('#monHocDiv').hide();
                }
            }
            $('#VaiTro').on('change', toggleMonHocDiv);
            toggleMonHocDiv(); // Kích hoạt khi tải trang
        });
    </script>
}