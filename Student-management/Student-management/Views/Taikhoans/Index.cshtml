@model IEnumerable<Student_management.Models.Taikhoan>

@{
    ViewData["Title"] = "Quản lý Tài khoản";
}

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-users-cog me-2"></i>@ViewData["Title"]</h5>
            <a asp-action="CreateUserAndAccount" class="btn btn-primary btn-sm"><i class="fas fa-user-plus me-2"></i>Tạo Người dùng & TK</a>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get" class="mb-4">
            <div class="row g-2 align-items-end">
                <div class="col-md-7">
                    <label class="form-label">Tìm theo Tên đăng nhập hoặc Tên người dùng</label>
                    <input type="text" name="searchString" class="form-control" value="@ViewData["CurrentSearch"]" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Lọc theo Vai trò</label>
                    <select name="roleFilter" class="form-select" asp-items="@(ViewBag.RoleList as SelectList)">
                        <option value="">-- Tất cả Vai trò --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-search me-2"></i>Tìm</button>
                    </div>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Tên Đăng nhập</th>
                        <th>Vai trò</th>
                        <th>Người dùng Liên kết</th>
                        <th class="text-center" style="width: 15%;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.TenDangNhap</strong></td>
                            <td>
                                @if (item.VaiTro == "Admin")
                                {
                                    <span class="badge bg-danger">@item.VaiTro</span>
                                }
                                else if (item.VaiTro == "GiaoVien")
                                {

                                    <span class="badge bg-warning text-dark">@item.VaiTro</span>
                                }
                                else
                                {

                                    <span class="badge bg-primary">@item.VaiTro</span>
                                }
                            </td>
                            <td>
                                @if (item.MaHsNavigation != null)
                                {
                                    <span class="text-primary"><i class="fas fa-user-graduate me-2"></i>@item.MaHsNavigation.HoTen</span>
                                }
                                else if (item.MaGvNavigation != null)
                                {
                                    <span class="text-warning"><i class="fas fa-chalkboard-teacher me-2"></i>@item.MaGvNavigation.HoTen</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.MaTk" class="btn btn-sm btn-warning" title="Sửa"><i class="fas fa-edit"></i></a>
                                <a asp-action="Details" asp-route-id="@item.MaTk" class="btn btn-sm btn-info" title="Chi tiết"><i class="fas fa-info-circle"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.MaTk" class="btn btn-sm btn-danger" title="Xóa"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>