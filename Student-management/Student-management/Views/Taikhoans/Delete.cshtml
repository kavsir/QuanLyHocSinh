@model Student_management.Models.Taikhoan

@{
    ViewData["Title"] = "Xóa Tài khoản";
}

<h1>@ViewData["Title"]</h1>
<h3 class="text-danger">Bạn có chắc chắn muốn xóa tài khoản này không?</h3>
<p class="text-danger">Hành động này không thể hoàn tác.</p>
<hr />

<div class="card shadow-sm bg-light">
    <div class="card-header">
        <h4>Thông tin Tài khoản sẽ bị xóa vĩnh viễn</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                Tên đăng nhập
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.TenDangNhap)
            </dd>
            <dt class="col-sm-3">
                Vai trò
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.VaiTro)
            </dd>
            <dt class="col-sm-3">
                Người dùng liên kết
            </dt>
            <dd class="col-sm-9">
                @if (Model.MaHsNavigation != null)
                {
                    <span>@Model.MaHsNavigation.HoTen</span>
                }
                else if (Model.MaGvNavigation != null)
                {

                    <span>@Model.MaGvNavigation.HoTen</span>
                }
                else
                {

                    <span class="text-muted">Không có</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="MaTk" />
    <input type="submit" value="Xác nhận Xóa" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
</form>