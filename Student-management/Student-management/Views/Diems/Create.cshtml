@model Student_management.Models.Diem

@{
    ViewData["Title"] = "Tạo Bảng điểm mới";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h4>@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" id="createForm">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="MaHs" class="form-label"></label>
                            <select asp-for="MaHs" class="form-select" asp-items="ViewBag.MaHs">
                                <option value="">-- Chọn học sinh --</option>
                            </select>
                            <span asp-validation-for="MaHs" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="MaMonHoc" class="form-label"></label>
                            <select asp-for="MaMonHoc" class="form-select" asp-items="ViewBag.MaMonHoc">
                                <option value="">-- Chọn môn học --</option>
                            </select>
                            <span asp-validation-for="MaMonHoc" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="MaHk" class="form-label"></label>
                            <select asp-for="MaHk" class="form-select" asp-items="ViewBag.MaHk">
                                <option value="">-- Chọn học kỳ --</option>
                            </select>
                            <span asp-validation-for="MaHk" class="text-danger"></span>
                        </div>
                    </div>

                    <hr />
                    <h5>Nhập điểm số (nếu có)</h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DiemMieng" class="form-label"></label>
                            <input asp-for="DiemMieng" class="form-control" type="number" step="0.1" min="0" max="10" />
                            <span asp-validation-for="DiemMieng" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Diem15p" class="form-label"></label>
                            <input asp-for="Diem15p" class="form-control" type="number" step="0.1" min="0" max="10" />
                            <span asp-validation-for="Diem15p" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Diem1Tiet" class="form-label"></label>
                            <input asp-for="Diem1Tiet" class="form-control" type="number" step="0.1" min="0" max="10" />
                            <span asp-validation-for="Diem1Tiet" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DiemThi" class="form-label"></label>
                            <input asp-for="DiemThi" class="form-control" type="number" step="0.1" min="0" max="10" />
                            <span asp-validation-for="DiemThi" class="text-danger"></span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer text-end">
                <a asp-action="Index" class="btn btn-secondary me-2">Quay lại</a>
                <button type="submit" form="createForm" class="btn btn-primary"><i class="fas fa-plus me-2"></i>Tạo mới</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}