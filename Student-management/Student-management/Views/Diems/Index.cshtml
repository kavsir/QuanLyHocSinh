@model IEnumerable<Student_management.Models.Diem>

@{
    ViewData["Title"] = "Quản lý Điểm số";
}

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-marker me-2"></i>@ViewData["Title"]</h5>
            <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fas fa-plus-circle me-2"></i>Nhập điểm mới</a>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get" class="mb-4">
            <div class="row g-2 align-items-end">
                <div class="col-md-6">
                    <label class="form-label">Tìm theo tên học sinh</label>
                    <input type="text" name="searchString" class="form-control" value="@ViewData["CurrentSearch"]" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Lọc theo Môn học</label>
                    <select name="subjectFilter" class="form-select" asp-items="@(ViewBag.SubjectList as SelectList)">
                        <option value="">-- Tất cả Môn học --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-search me-2"></i>Tìm</button>
                    </div>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>
                            <a class="text-white text-decoration-none" asp-action="Index"
                               asp-route-sortBy="@ViewData["NameSortParm"]"
                               asp-route-searchString="@ViewData["CurrentSearch"]"
                               asp-route-subjectFilter="@ViewData["CurrentSubjectFilter"]">
                                Học sinh <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th>Lớp</th>
                        <th>Môn học</th>
                        <th class="text-center">
                            <a class="text-white text-decoration-none" asp-action="Index"
                               asp-route-sortBy="@ViewData["ExamSortParm"]"
                               asp-route-searchString="@ViewData["CurrentSearch"]"
                               asp-route-subjectFilter="@ViewData["CurrentSubjectFilter"]">
                                Điểm Thi <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th class="text-center">Điểm TB</th>
                        <th class="text-center" style="width: 10%;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var diemTB = (item.DiemMieng + item.Diem15p + item.Diem1Tiet * 2 + item.DiemThi * 3) / 7;
                        <tr>
                            <td><strong>@item.MaHsNavigation?.HoTen</strong></td>
                            <td>@item.MaHsNavigation?.MaLopNavigation?.TenLop</td>
                            <td>@item.MaMonHocNavigation?.TenMonHoc</td>
                            <td class="text-center">@item.DiemThi</td>
                            <td class="text-center fw-bold">@diemTB?.ToString("F2")</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.MaDiem" class="btn btn-sm btn-warning" title="Sửa"><i class="fas fa-edit"></i></a>
                                <a asp-action="Details" asp-route-id="@item.MaDiem" class="btn btn-sm btn-info" title="Chi tiết"><i class="fas fa-info-circle"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>