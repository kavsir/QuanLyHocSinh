@model Student_management.Models.Lichhoc
@{ ViewData["Title"] = "Tạo Lịch học mới"; }

<h1>@ViewData["Title"]</h1><hr />
<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="MaHk" class="form-label"></label>
                            <select asp-for="MaHk" class="form-select" asp-items="ViewBag.MaHk"><option value="">-- Chọn --</option></select>
                            <span asp-validation-for="MaHk" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                             <label asp-for="MaLop" class="form-label"></label>
                            <select asp-for="MaLop" class="form-select" asp-items="ViewBag.MaLop"><option value="">-- Chọn --</option></select>
                            <span asp-validation-for="MaLop" class="text-danger"></span>
                        </div>
                    </div>
                     <div class="mb-3">
                        <label asp-for="MaMonHoc" class="form-label"></label>
                        <select asp-for="MaMonHoc" class="form-select" asp-items="ViewBag.MaMonHoc"><option value="">-- Chọn --</option></select>
                        <span asp-validation-for="MaMonHoc" class="text-danger"></span>
                    </div>
                     <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="MaGv" class="form-label"></label>
                            <select asp-for="MaGv" class="form-select" asp-items="ViewBag.MaGv"><option value="">-- Chọn --</option></select>
                            <span asp-validation-for="MaGv" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="MaPhong" class="form-label"></label>
                            <select asp-for="MaPhong" class="form-select" asp-items="ViewBag.MaPhong"><option value="">-- Chọn --</option></select>
                            <span asp-validation-for="MaPhong" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                         <div class="col-md-6 mb-3">
                            <label asp-for="ThuTrongTuan" class="form-label"></label>
                            <select asp-for="ThuTrongTuan" class="form-select">
                                <option value="">-- Chọn --</option>
                                <option value="Thứ Hai">Thứ Hai</option><option value="Thứ Ba">Thứ Ba</option>
                                <option value="Thứ Tư">Thứ Tư</option><option value="Thứ Năm">Thứ Năm</option>
                                <option value="Thứ Sáu">Thứ Sáu</option><option value="Thứ Bảy">Thứ Bảy</option>
                            </select>
                            <span asp-validation-for="ThuTrongTuan" class="text-danger"></span>
                        </div>
                         <div class="col-md-6 mb-3">
                            <label asp-for="TietHoc" class="form-label"></label>
                            <input asp-for="TietHoc" type="number" class="form-control" />
                            <span asp-validation-for="TietHoc" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary">Tạo mới</button>
                        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>