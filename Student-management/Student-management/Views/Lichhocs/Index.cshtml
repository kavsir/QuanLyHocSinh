@model IEnumerable<Student_management.Models.Lichhoc>

@{
    ViewData["Title"] = "Quản lý Thời khóa biểu";
}

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>@ViewData["Title"]</h5>
            <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fas fa-plus-circle me-2"></i>Thêm Lịch học mới</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Thứ</th>
                        <th class="text-center">Tiết</th>
                        <th>Lớp</th>
                        <th>Môn học</th>
                        <th>Giáo viên</th>
                        <th>Phòng học</th>
                        <th class="text-center" style="width: 10%;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.ThuTrongTuan</strong></td>
                            <td class="text-center">@item.TietHoc</td>
                            <td>@item.MaLopNavigation?.TenLop</td>
                            <td>@item.MaMonHocNavigation?.TenMonHoc</td>
                            <td>@item.MaGvNavigation?.HoTen</td>
                            <td>@item.MaPhongNavigation?.TenPhong</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.MaLichHoc" class="btn btn-sm btn-warning" title="Sửa"><i class="fas fa-edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.MaLichHoc" class="btn btn-sm btn-danger" title="Xóa"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>