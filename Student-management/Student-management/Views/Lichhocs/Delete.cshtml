@model Student_management.Models.Lichhoc
@{
    ViewData["Title"] = "Xóa Lịch học";
}
<h1>@ViewData["Title"]</h1>
<h3 class="text-danger">Bạn có chắc chắn muốn xóa lịch học này không?</h3>
<hr />
<div class="card shadow-sm bg-light">
    <div class="card-header">
        <h4>Thông tin Lịch học sẽ bị xóa</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MaLop)</dt>
            <dd class="col-sm-9">@Model.MaLopNavigation?.TenLop</dd>
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MaMonHoc)</dt>
            <dd class="col-sm-9">@Model.MaMonHocNavigation?.TenMonHoc</dd>
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MaGv)</dt>
            <dd class="col-sm-9">@Model.MaGvNavigation?.HoTen</dd>
            <dt class="col-sm-3">Thời gian</dt>
            <dd class="col-sm-9">Tiết @Model.TietHoc, @Model.ThuTrongTuan</dd>
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MaHk)</dt>
            <dd class="col-sm-9">@Model.MaHkNavigation?.TenHk</dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="MaLichHoc" />
    <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i>Xác nhận Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
</form>