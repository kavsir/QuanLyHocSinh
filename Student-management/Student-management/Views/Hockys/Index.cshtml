@model IEnumerable<Student_management.Models.Hocky>

@{
    ViewData["Title"] = "Quản lý Học kỳ";
}

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>@ViewData["Title"]</h5>
            <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fas fa-plus-circle me-2"></i>Thêm Học kỳ mới</a>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <form asp-action="Index" method="get" class="mb-4">
            <div class="row">
                <div class="col-md-4">
                    <label class="form-label">Lọc theo Năm học</label>
                    <select name="namHocFilter" class="form-select" asp-items="@(ViewBag.NamHocList as SelectList)" onchange="this.form.submit()">
                        <option value="">-- Hiển thị tất cả --</option>
                    </select>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Tên Học kỳ</th>
                        <th>Ngày Bắt đầu</th>
                        <th>Ngày Kết thúc</th>
                        <th>Năm học</th>
                        <th class="text-center" style="width: 15%;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.TenHk</strong></td>
                            <td>@item.NgayBatDau.ToString("dd/MM/yyyy")</td>
                            <td>@item.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                            <td>@item.MaNamHocNavigation?.TenNamHoc</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.MaHk" class="btn btn-sm btn-warning" title="Sửa"><i class="fas fa-edit"></i></a>
                                <a asp-action="Details" asp-route-id="@item.MaHk" class="btn btn-sm btn-info" title="Chi tiết"><i class="fas fa-info-circle"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>