@model Student_management.Models.Hocphi

@{
    ViewData["Title"] = "Xóa Phiếu thu";
}

<h1>@ViewData["Title"]</h1>
<h3 class="text-danger">Bạn có chắc chắn muốn xóa phiếu thu này không?</h3>
<hr />

<div class="card shadow-sm bg-light">
    <div class="card-header">
        <h4>Thông tin Phiếu thu sẽ bị xóa</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MaHs)</dt>
            <dd class="col-sm-9">@Model.MaHsNavigation?.HoTen</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MaHk)</dt>
            <dd class="col-sm-9">@Model.MaHkNavigation?.TenHk</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SoTien)</dt>
            <dd class="col-sm-9">@Model.SoTien?.ToString("N0") VNĐ</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TrangThai)</dt>
            <dd class="col-sm-9">@Model.TrangThai</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="MaHp" />
    <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i>Xác nhận Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
</form>