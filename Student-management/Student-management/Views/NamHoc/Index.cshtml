@model IEnumerable<Student_management.Models.Namhoc>

@{
    ViewData["Title"] = "Danh sách Năm học";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Thêm Năm học</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Tên Năm học</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaNamHoc</td>
                <td>@item.TenNamHoc</td>
                <td>@item.NgayBatDau.ToString("dd/MM/yyyy")</td>
                <td>@item.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaNamHoc" class="btn btn-warning btn-sm">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaNamHoc" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
