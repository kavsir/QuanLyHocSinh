@model IEnumerable<Student_management.Models.Lop>

@{
    ViewData["Title"] = "Chọn lớp để xem TKB";
}

<h2>Chọn lớp để xem TKB</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã lớp</th>
            <th>Tên lớp</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lop in Model)
        {
            <tr>
                <td>@lop.MaLop</td>
                <td>@lop.TenLop</td>
                <td>
                    <a asp-action="XemTheoLop" asp-route-id="@lop.MaLop" class="btn btn-primary">
                        Xem TKB
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
