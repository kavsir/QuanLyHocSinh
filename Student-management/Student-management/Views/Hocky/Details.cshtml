@model Student_management.Models.Hocky

@{
    ViewData["Title"] = "Chi tiết Học kỳ";
}

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-header bg-primary text-white">
        Thông tin Học kỳ
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Tên Học kỳ</dt>
            <dd class="col-sm-9">@Model.TenHk</dd>

            <dt class="col-sm-3">Ngày bắt đầu</dt>
            <dd class="col-sm-9">@Model.NgayBatDau.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Ngày kết thúc</dt>
            <dd class="col-sm-9">@Model.NgayKetThuc.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Năm học</dt>
            <dd class="col-sm-9">@Model.MaNamHocNavigation.TenNamHoc</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.MaHk">Sửa</a>
    <a class="btn btn-secondary" asp-action="Index">Quay lại danh sách</a>
</div>
