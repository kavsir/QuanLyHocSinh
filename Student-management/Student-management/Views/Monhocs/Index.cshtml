@model IEnumerable<Student_management.Models.Monhoc>

@{
    ViewData["Title"] = "Quản lý Môn học";
}

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-book me-2"></i>@ViewData["Title"]</h5>
            <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fas fa-plus-circle me-2"></i>Thêm Môn học mới</a>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <form asp-action="Index" method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="SearchString" class="form-control" placeholder="Nhập tên môn học để tìm..." value="@ViewData["CurrentFilter"]" />
                <button class="btn btn-outline-primary" type="submit"><i class="fas fa-search me-2"></i>Tìm kiếm</button>
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-sync-alt"></i></a>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr><th>Tên Môn học</th><th class="text-center">Số Tiết</th><th class="text-center">Hệ Số</th><th class="text-center" style="width: 15%;">Hành động</th></tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.TenMonHoc</strong></td>
                            <td class="text-center">@item.SoTiet</td>
                            <td class="text-center">@item.HeSo</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.MaMonHoc" class="btn btn-sm btn-warning" title="Sửa"><i class="fas fa-edit"></i></a>
                                <a asp-action="Details" asp-route-id="@item.MaMonHoc" class="btn btn-sm btn-info" title="Chi tiết"><i class="fas fa-info-circle"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.MaMonHoc" class="btn btn-sm btn-danger" title="Xóa"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>