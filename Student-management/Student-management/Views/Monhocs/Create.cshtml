@model Student_management.Models.Monhoc

@{
    ViewData["Title"] = "Tạo Môn học mới";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="TenMonHoc" class="form-label"></label>
                        <input asp-for="TenMonHoc" class="form-control" />
                        <span asp-validation-for="TenMonHoc" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="SoTiet" class="form-label"></label>
                            <input asp-for="SoTiet" class="form-control" type="number" />
                            <span asp-validation-for="SoTiet" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="HeSo" class="form-label"></label>
                            <input asp-for="HeSo" class="form-control" type="number" step="0.5" />
                            <span asp-validation-for="HeSo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Tạo mới</button>
                        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}