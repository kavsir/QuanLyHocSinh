@model Student_management.Models.Monhoc

@{
    ViewData["Title"] = "Xóa Môn học";
}

<h1>@ViewData["Title"]</h1>
<h3 class="text-danger">Bạn có chắc chắn muốn xóa môn học này không?</h3>
<hr />

<div class="card shadow-sm bg-light">
    <div class="card-header">
        <h4>Thông tin Môn học sẽ bị xóa</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TenMonHoc)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TenMonHoc)</dd>
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SoTiet)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.SoTiet)</dd>
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.HeSo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.HeSo)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="MaMonHoc" />
    <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i>Xác nhận Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
</form>