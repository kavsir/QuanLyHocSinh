@{
    ViewData["Title"] = "Thông tin cá nhân";
    var role = ViewData["Role"] as string;
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="card shadow-sm">
    @if (role == "GiaoVien")
    {
        var profile = ViewData["ProfileModel"] as Giaovien;
        <div class="card-header bg-warning text-dark">
            <h4>Hồ sơ Giáo viên</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Họ và tên</dt>
                <dd class="col-sm-9">@profile?.HoTen</dd>
                <dt class="col-sm-3">Ngày sinh</dt>
                <dd class="col-sm-9">@profile?.NgaySinh?.ToString("dd/MM/yyyy")</dd>
                <dt class="col-sm-3">Giới tính</dt>
                <dd class="col-sm-9">@profile?.GioiTinh</dd>
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@profile?.Email</dd>
                <dt class="col-sm-3">Số điện thoại</dt>
                <dd class="col-sm-9">@profile?.Sdt</dd>
                <dt class="col-sm-3">Địa chỉ</dt>
                <dd class="col-sm-9">@profile?.DiaChi</dd>
                <dt class="col-sm-3">Môn chuyên môn</dt>
                <dd class="col-sm-9">@profile?.MaMonHocNavigation?.TenMonHoc</dd>
            </dl>
        </div>
    }
    else if (role == "HocSinh")
    {
        var profile = ViewData["ProfileModel"] as Hocsinh;
        <div class="card-header bg-primary text-white">
            <h4>Hồ sơ Học sinh</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Họ và tên</dt>
                <dd class="col-sm-9">@profile?.HoTen</dd>
                <dt class="col-sm-3">Ngày sinh</dt>
                <dd class="col-sm-9">@profile?.NgaySinh?.ToString("dd/MM/yyyy")</dd>
                <dt class="col-sm-3">Giới tính</dt>
                <dd class="col-sm-9">@profile?.GioiTinh</dd>
                <dt class="col-sm-3">Lớp</dt>
                <dd class="col-sm-9">@profile?.MaLopNavigation?.TenLop</dd>
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@profile?.Email</dd>
                <dt class="col-sm-3">Số điện thoại</dt>
                <dd class="col-sm-9">@profile?.Sdt</dd>
                <dt class="col-sm-3">Địa chỉ</dt>
                <dd class="col-sm-9">@profile?.DiaChi</dd>
            </dl>
        </div>
    }
</div>
<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Quay lại Trang chủ</a>
</div>