@model Student_management.Models.Lop

@{
    ViewData["Title"] = "Chi tiết Lớp học";
}

<div class="container-fluid">
    <h1 class="mt-4">@ViewData["Title"]: <span class="text-primary">@Model.TenLop</span></h1>
    <hr />

    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <i class="fas fa-info-circle me-2"></i>Thông tin chung
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Năm học:</dt>
                <dd class="col-sm-4">@Model.MaNamHocNavigation?.TenNamHoc</dd>

                <dt class="col-sm-2">Giáo viên Chủ nhiệm:</dt>
                <dd class="col-sm-4">@Model.MaGvcnNavigation?.HoTen</dd>

                <dt class="col-sm-2">Sĩ số:</dt>
                <dd class="col-sm-4">@Model.SiSo học sinh</dd>
            </dl>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header">
            <i class="fas fa-users me-2"></i>Danh sách Học sinh
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Họ và tên</th>
                            <th>Ngày sinh</th>
                            <th>Giới tính</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int stt = 1;
                        }
                        @foreach (var student in Model.Hocsinhs)
                        {
                            <tr>
                                <td>@(stt++)</td>
                                <td><strong>@student.HoTen</strong></td>
                                <td>@student.NgaySinh?.ToString("dd/MM/yyyy")</td>
                                <td>@student.GioiTinh</td>
                                <td>@student.Email</td>
                                <td>@student.Sdt</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Quay lại Dashboard</a>
    </div>
</div>