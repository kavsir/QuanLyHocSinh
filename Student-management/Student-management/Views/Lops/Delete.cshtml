@model Student_management.Models.Lop

@{
    ViewData["Title"] = "Xóa Lớp học";
}

<h1>@ViewData["Title"]</h1>
<h3 class="text-danger">Bạn có chắc chắn muốn xóa lớp học này không?</h3>
<p class="text-danger">Lưu ý: Bạn chỉ có thể xóa một lớp học khi không còn học sinh nào trong lớp.</p>
<hr />

<div class="card shadow-sm bg-light">
    <div class="card-header">
        <h4>Thông tin Lớp học sẽ bị xóa</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TenLop)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TenLop)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SiSo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.SiSo)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MaNamHoc)</dt>
            <dd class="col-sm-9">@Model.MaNamHocNavigation?.TenNamHoc</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MaGvcn)</dt>
            <dd class="col-sm-9">@Model.MaGvcnNavigation?.HoTen</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="MaLop" />
    <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i>Xác nhận Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
</form>