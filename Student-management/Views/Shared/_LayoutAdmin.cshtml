@{
    Layout = null;
    var userName = User.Identity?.Name ?? "Admin";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản trị hệ thống</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Thêm style để định dạng kết quả tìm kiếm */
        .search-results {
            position: absolute;
            width: 100%;
            z-index: 1000;
            margin-top: 40px; /* Điều chỉnh để không che ô input */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">Quản lý học sinh</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" asp-controller="Namhoc" asp-action="Index">Năm học</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Hocky" asp-action="Index">Học kỳ</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Monhoc" asp-action="Index">Môn học</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Phonghoc" asp-action="Index">Phòng học</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Giaovien" asp-action="Index">Giáo viên</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Lop" asp-action="Index">Lớp</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Hocsinh" asp-action="Index">Học sinh</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Taikhoan" asp-action="Index">Tài khoản</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Diem" asp-action="Index">Điểm</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Lichhoc" asp-action="Index">Lịch học</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Hocphi" asp-action="Index">Học Phí</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="ThoiKhoaBieu" asp-action="Index">Thời khoá biểu</a></li>
            </ul>

            <form class="d-flex position-relative me-3" onsubmit="return false;">
                <input class="form-control me-2" type="search" id="admin-search-input" placeholder="Tìm kiếm mọi thứ...">
                <div id="admin-search-results" class="search-results"></div>
            </form>

            <ul class="navbar-nav">
                <li class="nav-item"><span class="navbar-text text-white">Xin chào, @userName</span></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout">Đăng xuất</a></li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            const searchInput = $('#admin-search-input');
            const searchResultsContainer = $('#admin-search-results');
            let searchTimeout;

            searchInput.on('keyup', function () {
                clearTimeout(searchTimeout);
                const query = $(this).val();

                if (query.length < 2) {
                    searchResultsContainer.hide().empty();
                    return;
                }

                searchTimeout = setTimeout(function () {
                    $.ajax({
                        url: '/AdminSearch', // Gọi tới Controller AdminSearch
                        type: 'GET',
                        data: { query: query },
                        success: function (result) {
                            searchResultsContainer.empty();
                            if (result.success && result.data.length > 0) {
                                const list = $('<div class="list-group"></div>');
                                $.each(result.data, function (index, item) {
                                    const listItem = $(`
                                        <a href="${item.url}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                            <span>${item.ten}</span>
                                            <span class="badge bg-primary rounded-pill">${item.loai}</span>
                                        </a>
                                    `);
                                    list.append(listItem);
                                });
                                searchResultsContainer.append(list);
                            } else {
                                searchResultsContainer.html('<div class="list-group-item text-muted">Không tìm thấy kết quả.</div>');
                            }
                            searchResultsContainer.show();
                        },
                        error: function () {
                            searchResultsContainer.html('<div class="list-group-item text-danger">Lỗi khi tìm kiếm.</div>').show();
                        }
                    });
                }, 300);
            });

            // Ẩn kết quả khi click ra ngoài
            $(document).on('click', function (e) {
                if (!$(e.target).closest('#admin-search-input, #admin-search-results').length) {
                    searchResultsContainer.hide();
                }
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>