@{
    ViewData["Title"] = "Bảng điều khiển";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; // Đảm bảo gọi đúng Layout
}

<div class="container-fluid px-4">
    <h1 class="mt-4">📊 Bảng điều khiển</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Tổng quan hệ thống</li>
    </ol>

    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card bg-primary text-white shadow h-100">
                <div class="card-body">
                    <div class="fs-3 fw-bold">@ViewData["TotalStudents"]</div>
                    <div>Tổng số Học sinh</div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Hocsinh" asp-action="Index">Xem chi tiết</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card bg-success text-white shadow h-100">
                <div class="card-body">
                    <div class="fs-3 fw-bold">@ViewData["TotalTeachers"]</div>
                    <div>Tổng số Giáo viên</div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Giaovien" asp-action="Index">Xem chi tiết</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card bg-warning text-dark shadow h-100">
                <div class="card-body">
                    <div class="fs-3 fw-bold">@ViewData["TotalClasses"]</div>
                    <div>Tổng số Lớp học</div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-dark stretched-link" asp-controller="Lop" asp-action="Index">Xem chi tiết</a>
                    <div class="small text-dark"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card bg-info text-white shadow h-100">
                <div class="card-body">
                    <div class="fs-3 fw-bold">@ViewData["TotalSubjects"]</div>
                    <div>Tổng số Môn học</div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Monhoc" asp-action="Index">Xem chi tiết</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>

    <h3 class="mt-4">💰 Thống kê học phí</h3>
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card border-success shadow h-100">
                <div class="card-body text-success">
                    <h5 class="card-title">Tổng số tiền đã thu</h5>
                    <p class="card-text fs-4 fw-bold">@String.Format("{0:N0} VNĐ", ViewData["TotalHocPhi"])</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-primary shadow h-100">
                <div class="card-body text-primary">
                    <h5 class="card-title">Số lượt đã đóng</h5>
                    <p class="card-text fs-4 fw-bold">@ViewData["DaDong"]</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-danger shadow h-100">
                <div class="card-body text-danger">
                    <h5 class="card-title">Số lượt chưa đóng</h5>
                    <p class="card-text fs-4 fw-bold">@ViewData["ChuaDong"]</p>
                </div>
            </div>
        </div>
    </div>
</div>