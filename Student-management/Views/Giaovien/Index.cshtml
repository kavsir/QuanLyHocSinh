@model IEnumerable<Student_management.Models.Giaovien>

@{
    ViewData["Title"] = "Danh sách giáo viên";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Thêm giáo viên mới</a>
</p>

<form asp-action="Index" method="get">
    <div class="row g-3 align-items-center mb-3">
        <div class="col-md-6">
            <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm theo tên..." value="@ViewData["CurrentFilter"]">
        </div>
        <div class="col-md-4">
            <select name="maMonHoc" class="form-select" asp-items="ViewBag.MonHocList">
                <option value="">-- Lọc theo môn học --</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
        </div>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Giới tính</th>
            <th>Địa chỉ</th>
            <th>SĐT</th>
            <th>Email</th>
            <th>Môn học</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HoTen</td>
                <td>@item.NgaySinh.ToString("dd/MM/yyyy")</td>
                <td>@item.GioiTinh</td>
                <td>@item.DiaChi</td>
                <td>@item.Sdt</td>
                <td>@item.Email</td>
                <td>@item.MaMonHocNavigation?.TenMonHoc</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaGv" class="btn btn-info btn-sm">Xem</a>
                    <a asp-action="Edit" asp-route-id="@item.MaGv" class="btn btn-primary btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaGv" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>