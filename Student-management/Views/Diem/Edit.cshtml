@model Student_management.Models.Diem

@{
    ViewData["Title"] = "Sửa điểm";
}

<h2>Sửa điểm</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="MaHs" class="control-label">Học sinh</label>
        <select asp-for="MaHs" class="form-control" asp-items="ViewBag.MaHs"></select>
    </div>

    <div class="form-group">
        <label asp-for="MaMonHoc" class="control-label">Môn học</label>
        <select asp-for="MaMonHoc" class="form-control" asp-items="ViewBag.MaMonHoc"></select>
    </div>

    <div class="form-group">
        <label asp-for="MaHk" class="control-label">Học kỳ</label>
        <select asp-for="MaHk" class="form-control" asp-items="ViewBag.MaHk"></select>
    </div>

    <div class="form-group">
        <label asp-for="DiemMieng" class="control-label">Điểm miệng</label>
        <input asp-for="DiemMieng" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Diem15p" class="control-label">Điểm 15 phút</label>
        <input asp-for="Diem15p" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Diem1Tiet" class="control-label">Điểm 1 tiết</label>
        <input asp-for="Diem1Tiet" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DiemThi" class="control-label">Điểm thi</label>
        <input asp-for="DiemThi" class="form-control" />
    </div>

    <!-- Hidden field bắt buộc gửi MaDiem -->
    <input type="hidden" asp-for="MaDiem" />

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>
